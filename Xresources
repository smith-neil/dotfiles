URxvt*fading:                  20
URxvt*fadeColor:               S_base03
URxvt*pointerColor:            S_base01
URxvt*pointerColorBackground:  S_base01
URxvt*pointerColorForeground:  S_base1
URxvt*colorUL:                 S_yellow
URxvt*underlineColor:          S_yellow
URxvt*colorBD:                 S_yellow
URxvt*colorIT:                 S_yellow
!URxvt*highlightColor:
!URxvt*highlightTextColor:

! Xft settings
Xft*dpi: 96
Xft*antialias: true
Xft*hinting: true

! Set font
*font: xft:DejaVu\ Sans\ Mono\ for\ Powerline:pixelsize=13,\
       xft:Sauce\ Code\ Pro\ Nerd\ Font:pixelsize=13
!*boldFont:
!*italicFont:
!*boldItalicFont:

! URxvt settings

URxvt*perl-ext-common: resize-font

! Scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! Disable the scrollback buffer for the secondary screen
URxvt*secondaryScreen: 1
URxvt*secondaryScroll: 0

! Disable scrollbars
URxvt*scrollBar: 0

! Spacing
URxvt*lineHeight: 0.8
URxvt*letterSpace: -1

! Resize font hotkeys
URxvt*resize-font.smaller: C-underscore
URxvt*resize-font.bigger: C-plus
URxvt*resize-font.reset: C-equal
URxvt*resize-font.show: C-question

! Rofi settings
rofi.color-enabled: true
rofi.color-window: S_base03
rofi.color-normal: S_base03, S_blue, S_base03, S_base03, S_magenta
rofi.color-active: S_base03, S_blue, S_base03, S_base03, S_magenta
rofi.color-urgent: S_base03, S_blue, S_base03, S_base03, S_magenta
rofi.font: DejaVu Sans Mono 18
rofi.width: 100
!rofi.fullscreen: true
rofi.separator-style: solid
rofi.lines: 5
rofi.eh: 2
rofi.padding: 360
